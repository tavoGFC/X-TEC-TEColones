@model X_TEC.TEColones.Models.AdminModels.AdminModel
@{
    ViewBag.Title = "Crear Promocion";
    Layout = "~/Views/LayoutBases/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Crear Promociones de un Material Individual</title>
</head>

<body>
    @{
        TempData["admin"] = @Model;
    }
    <div class="py-2">
        <ul class="nav nav-tabs justify-content-center">
            <li class="nav-item">
                <h5> <a class="nav-link active" href="#">@Html.ActionLink("Promocion Individual ", "CreateSinglePromotion", "Promotion")</a></h5>
            </li>
            &nbsp;
            &nbsp;
            &nbsp;
            <li class="nav-item">
                <h5> <a class="nav-link" href="#">@Html.ActionLink(" Promocion en Combo", "CreateComboPromotion", "Promotion")</a></h5>
            </li>
        </ul>
    </div>

    @using (Html.BeginForm("NewSinglePromotion", "Promotion", FormMethod.Post))
    {
        <div class="py-2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <h5 align="center">
                            Categoria:
                            @Html.DropDownList("materialType", new SelectList(Model.PromotionModel.ListMaterials))
                        </h5>

                        <h5 align="center">
                            Cantidad (kg): 
                            <input type="text" id="inputAmountKg" name="inputAmountKg" required oninvalid="this.setCustomValidity('Todos los campos son de caracter obligatorio.')" oninput="setCustomValidity('')" />
                        </h5>

                        <h5 align="center">
                            Beneficio (TEColones): 
                            <input type="text" id="inputValueTCS" name="inputValueTCS" required oninvalid="this.setCustomValidity('Todos los campos son de caracter obligatorio.')" oninput="setCustomValidity('')" />
                        </h5>

                        <h5 align="center">
                            Fecha de vigencia: 
                            <input type="datetime-local" id="inputFinishDate" name="inputFinishDate"><br>
                        </h5>

                        <h5 align="center">
                        Guardar y Activar:
                        <input type="radio" name="publish" id="publish" value="publish"/><br>
                        </h5>

                        <h5 align="center">
                            Guardar y Almacenar:
                            <input type="radio" name="save" id="save" value="save"/><br>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-primary text-center justify-content-center align-items-center w-30">Guardar</button>
            &nbsp;
            <button type="reset" class="btn btn-danger text-center justify-content-center align-items-center w-30">Cancelar</button>
        </div>

    }
    <!--</form> -->
</body>

</html>