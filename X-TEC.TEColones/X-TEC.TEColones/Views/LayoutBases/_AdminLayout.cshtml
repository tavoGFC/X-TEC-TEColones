@model X_TEC.TEColones.Models.AdminModels.AdminModel
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/Recursos/theme.css" type="text/css">
</head>

<body>
    <div class="py-0">
        <div class="container">
            <div class="row">
                <div class="col-md-6"><img class="img-fluid d-block" src="~/Content/Recursos/TEColonesBanner.jpg"></div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6"><a class="btn btn-link btn-lg w-100" href="#" id="nombreAdminID"> @Model.FirstName   @Model.LastName </a></div>
                        <div class="col-md-6"><img class="img-fluid d-block rounded-circle" src="@Model.Photo"  width="90" height="90" id="imagenPerfilLayout"></div>
                        <div class="col-md-6"></div>
                        <div class="col-md-6"><a class="btn btn-link" href="@Url.Action("LogIn", "LogIn")">Cerrar sesion</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container justify-content-center">
            <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse" data-target="#navbar9">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center justify-content-center" id="navbar9">
                <ul class="navbar-nav">
                    @{ 
                        TempData["admin"] = @Model;
                    }
                    <li class="nav-item mx-2">@Html.ActionLink("Pagina Principal", "Home", "AdminHome")</li>
                    <li class="nav-item mx-2">@Html.ActionLink("Crear Usuario", "Index", "CreateUser")</li>
                    <li class="nav-item mx-2">@Html.ActionLink("Configuracion", "MaterialValueConfiguration", "Configuration")</li>
                    <li class="nav-item mx-2">@Html.ActionLink("Crear Promocion", "CreateSinglePromotion", "Promotion")</li>
                    <li class="nav-item mx-2">@Html.ActionLink("Ver Promociones", "ViewSinglePromotion", "Promotion")</li>
                    <li class="nav-item mx-2">@Html.ActionLink("Reportes", "Index", "Report")</li>
                    <li class="nav-item mx-2">@Html.ActionLink("Dashboard", "Index", "AdminDashboard")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()  <!--TODOS LOS LAYOUT TIENEN QUE TENER ESTO, sino no sirven-->
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year | X-TEC TEColones</p>
        </footer>
    </div>

</body>

</html>