@model X_TEC.TEColones.Models.StudentModels.StudentModel
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS dependencies -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Recursos/theme.css" /> 


    <title>@ViewBag.Title | X-TEC TEColones</title>
</head>

<body>
    <div class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6"><img class="img-fluid d-block" src="~/Content/Recursos/TEColonesBanner.jpg"></div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6"><a class="btn btn-link btn-lg w-100" href="#" >@Model.FirstName  @Model.LastName</a></div>  <!--LINK NOMBRE ESTUDIANTE-->
                        <div class="col-md-6"><img class="img-fluid d-block rounded-circle" src="@Model.Photo" width="90" height="90" id="imagenPerfilLayout"></div>  <!-- FOTO PERFIL -->
                        <div class="col-md-6"></div>
                        <div class="col-md-6"><a class="btn btn-link" href="~/LogIn/LogIn">Cerrar Sesion</a></div>  <!--LINK CERRAR SESION-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container justify-content-center">
            <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse" data-target="#navbar9">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center justify-content-center" id="navbar9">
                <ul class="navbar-nav">
                    @{ 
                        TempData["student"] = @Model;
                    }

                    <li class="nav-item mx-2"> @Html.ActionLink("Inicio", "Home", "Home") </li>
                    <li class="nav-item mx-2"> @Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                    <li class="nav-item mx-2"> @Html.ActionLink("Asignar TEColones", "Index", "AssignTEColones")</li>
                    <li class="nav-item mx-2"> @Html.ActionLink("Compartir TEColones", "Index", "ShareTEColones")</li>
                    <!--  <li class="nav-item mx-2"> <a class="nav-link" href="#">Programa TEColones </a> </li>  -->
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()  
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year | X-TEC TEColones</p>
        </footer>
    </div>

</body>

</html>
