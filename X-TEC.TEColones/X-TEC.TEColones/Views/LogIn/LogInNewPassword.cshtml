
@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Recursos/theme.css" />

    <title>TEColones Iniciar Sesion Nueva Contraseña</title>
</head>

<body>
    <div class="jumbotron text-center bg-gradient">
        <h1>XTEC-TEColones</h1>

    </div>
    <h5>@ViewBag.Message</h5>

    <div class="py-5">
        @using (Html.BeginForm("LogInNewPassword", "LogIn", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form id="c_form-h" class="">
                            <div class="form-group row">
                                <label for="IdTempPswrd" class="col-2 col-form-label">Contraseña Temporal:</label>
                                <div class="col-10">
                                    <input id="IdTempPswrd" type="password" name="IdTempPswrd" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="IdNewPswrd" class="col-2 col-form-label">Nueva Contraseña:</label>
                                <div class="col-10">
                                    <input id="IdNewPswrd" type="password" name="IdNewPswrd" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="IdConfirmPswrd" class="col-2 col-form-label">Confirme Contraseña:</label>
                                <div class="col-10">
                                    <input id="IdConfirmPswrd" type="password" name="IdConfirmPswrd" class="form-control" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4"> </div>
                                <div class="col-md-4">
                                    <div class="row justify-content-center">
                                        <button type="submit" class="btn btn-primary text-center justify-content-center align-items-center w-75">Iniciar Sesion</button>
                                    </div>
                                </div>
                                <div class="col-md-4"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

    </div>

</body>
</html>
