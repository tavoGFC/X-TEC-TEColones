@{
    ViewBag.Title = "Iniciar Sesion";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    
    <link rel="stylesheet" href="~/Content/theme.css" />

    <title>TEColones Iniciar Sesion</title>
</head>

<body>
    <div class="jumbotron text-center bg-gradient">
        <h1>XTEC-TEColones</h1>

    </div>
    <h5>@ViewBag.Message</h5>
       
    <div class="py-5">
        @using (Html.BeginForm("LogIn", "LogIn", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form id="c_form-h" class="">
                            <div class="form-group row">
                                <label for="IdUser" class="col-2 col-form-label">Numero de Carnet o Empleado:</label>
                                <div class="col-10">
                                    <input id="IdUser" type="text" name="IdUser" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="PasswordUser" class="col-2 col-form-label">Contraseña:</label>
                                <div class="col-10">
                                    <input id="PasswordUser" name="PasswordUser" class="form-control" type="password">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4"> </div>
                                <div class="col-md-4">
                                    <div class="row justify-content-center">
                                        <a href="~/LogIn/ForgotPassword" title="Olvido su contraseña">Olvido su Contraseña</a>
                                    </div>
                                    <div class="row justify-content-center">
                                        <button type="submit" class="btn btn-primary text-center justify-content-center align-items-center w-75"> Iniciar Sesion</button>
                                    </div>
                                </div>
                                <div class="col-md-4"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4"> </div>
                        <div class="col-md-4">
                            <div class="row justify-content-center">
                                <button id="btnLogIn" onclick="location.href='@Url.Action("CreateAccount", "CreateAccount")'" type="button" class="btn btn-dark text-center justify-content-center align-items-center w-75">Crear Cuenta</button>
                            </div>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>