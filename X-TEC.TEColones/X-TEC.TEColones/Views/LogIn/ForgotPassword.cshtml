
@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Recursos/theme.css" />

    <title>TEColones Olvido su Contraseña</title>
</head>

<body>
    <div class="jumbotron text-center bg-gradient">
        <h1>XTEC-TEColones</h1>

    </div>
    <h5>Olvidó su contraseña?</h5>
    <h5 style="color:red;"> @ViewBag.Message </h5>

    <div class="py-5">
        @using (Html.BeginForm("ForgotPassword", "LogIn", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form id="c_form-h" class="">
                            <div class="form-group row">
                                <label for="IdUser" class="col-2 col-form-label">Numero de Carnet o Empleado:</label>
                                <div class="col-10">
                                    <input id="IdUser" type="text" name="IdUser" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="EmailUser" class="col-2 col-form-label">Correo electrónico:</label>
                                <div class="col-10">
                                    <input id="EmailUser" name="EmailUser" class="form-control" type="email" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4"> </div>
                                <div class="col-md-4">
                                    <div class="row justify-content-center">
                                        <button type="submit" class="btn btn-primary text-center justify-content-center align-items-center w-75">Recuperar</button>
                                        <button id="btnCancel" onclick="location.href='@Url.Action("LogIn", "LogIn")'" type="button" class="btn btn-dark text-center justify-content-center align-items-center w-75">Cancelar</button>
                                    </div>
                                </div>
                                <div class="col-md-4"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        
    </div>

</body>
</html>
