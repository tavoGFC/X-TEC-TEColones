@{
    ViewBag.Title = "Cambiar Contraseña ";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Recursos/theme.css">

    <title>@ViewBag.Title</title>

</head>
<body>
    <div style="text-align:center">
        <h2>@ViewBag.Message</h2>
        <h2>Esta iniciando por primera vez</h2>
        <h4>Necesita cambiar su contraseña</h4>
    </div>
    @{
        TempData["user"] = ViewBag.User;
    }
    <div class="py-5">
       
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form id="c_form-h" action="UpdatePassword" method="post" class="" onsubmit="return checkEmail(this);">
                            <div class="form-group row">
                                <label for="IdUser" class="col-2 col-form-label">Nueva Contraseña:</label>
                                <div class="col-10">
                                    <input id="NewPasswordUser" type="password" name="NewPasswordUser" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="PasswordUser" class="col-2 col-form-label">Confirma la Contraseña:</label>
                                <div class="col-10">
                                    <input id="VeryPasswordUser" name="VeryPasswordUser" class="form-control" type="password">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4"> </div>
                                <div class="col-md-4">
                                    <div class="row justify-content-center">
                                        <button id="accept" type="submit" class="btn btn-success text-center justify-content-center align-items-center w-75"> Aceptar e Iniciar Sesion</button>
                                    </div>
                                </div>
                                <div class="col-md-4"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
       
    </div>
    <script type="text/javascript">
        function checkEmail(theForm) {
            if (theForm.NewPasswordUser.value != theForm.VeryPasswordUser.value) {
                alert('Las contraseñas no coinciden, verifique por favor');
                return false;
            } else {
                return true;
            }
        }
    </script>
    
</body>
</html>

